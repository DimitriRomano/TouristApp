<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/login"
        android:layout_width="163dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="123dp"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:text="Welcome on Tourist Application"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/inputPseudo"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="129dp"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="119dp"
        android:layout_marginRight="119dp"
        android:hint="Pseudo"/>

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputPseudo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:hint="Password"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/activity_main_register_btn"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:text="Register" />

    <Button
        android:id="@+id/activity_main_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputPassword"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_toStartOf="@+id/activity_main_register_btn"
        android:layout_toLeftOf="@+id/activity_main_register_btn"
        android:text="Login" />

</RelativeLayout>